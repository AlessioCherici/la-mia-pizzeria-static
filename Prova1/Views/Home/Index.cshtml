@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Pizzeria</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body>
    <header class="container-fluid text-center bg-danger">
        <div class="row">
            <div class="col-5"></div>
            <p class="col-2 fs-5 pt-3 fw-bold">Pizzeria Da Gigi</p>
            <div class="col-5"></div>
        </div>

        <div class="row fs-1 fw-bolder">
            <p>MENU'</p>
        </div>
    </header>

    <main>
        <div class="container-fluid my-3">
            <div class="row text-center ">
                <h4>Pizze:</h4>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row mx-5">
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card mb-5 border">
                        <img class="card-img-top img-fluid" src="https://www.salentofoodporn.it/wp-content/uploads/64947556_195794101358660_7132441415315598871_n1-300x300.jpg" alt="Pizza1">
                        <div class="card-body pb-0">
                            <h5 class="text-black text-center">Bufalina</h5>
                        </div>
                        <div class="card-body pt-0 text-center">
                            <button type="button" class="btn btn-info py-1 m-2 btn-lg px-1">8,50 €</button>
                            <button type="button" class="btn btn-outline-info py-1 m-2 btn-lg px-1">Aggiungi ingredienti</button>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card mb-5 border">
                        <img class="card-img-top img-fluid" src="https://www.killingthyme.net/wp-content/uploads/2020/08/hawaiian-pizza-1-300x300.jpg" alt="Pizza2">
                        <div class="card-body pb-0">
                            <h5 class="text-black text-center">Lo Sbaglio</h5>
                        </div>
                        <div class="card-body pt-0 text-center">
                            <button type="button" class="btn btn-info py-1 m-2 btn-lg px-1">13.50 €</button>
                            <button type="button" class="btn btn-outline-info py-1 m-2 btn-lg px-1">Aggiungi ingredienti</button>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card mb-5 border">
                        <img class="card-img-top img-fluid" src="https://www.pizzeriagiuseppesalsiera.it/wp-content/uploads/2021/01/WhatsApp-Image-2021-01-19-at-14.01.40-300x300.jpeg" alt="Pizza3">
                        <div class="card-body pb-0">
                            <h5 class="text-black text-center">Bufala e alici</h5>
                        </div>
                        <div class="card-body pt-0 text-center">
                            <button type="button" class="btn btn-info py-1 m-2 btn-lg px-1">9,50 €</button>
                            <button type="button" class="btn btn-outline-info py-1 m-2 btn-lg px-1">Aggiungi ingredienti</button>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card mb-5 border">
                        <img class="card-img-top img-fluid" src="https://www.brotherskitchen.in/wp-content/uploads/2021/03/farmhouse-pizza-vegetarian-pizza-with-mouth-watering-toppings_1024-768-300x300.jpg" alt="Pizza4">
                        <div class="card-body pb-0">
                            <h5 class="text-black text-center">Quella strana</h5>
                        </div>
                        <div class="card-body pt-0 text-center">
                            <button type="button" class="btn btn-info py-1 m-2 btn-lg px-1">10 €</button>
                            <button type="button" class="btn btn-outline-info py-1 m-2 btn-lg px-1">Aggiungi ingredienti</button>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card mb-5 border">
                        <img class="card-img-top img-fluid" src="https://simply-delicious-food.com/wp-content/uploads/2020/06/Grilled-Pizza-Margherita-3-300x300.jpg" alt="Pizza5">
                        <div class="card-body pb-0">
                            <h5 class="text-black text-center">Campagnola</h5>
                        </div>
                        <div class="card-body pt-0 text-center">
                            <button type="button" class="btn btn-info py-1 m-2 btn-lg px-1">7,50 €</button>
                            <button type="button" class="btn btn-outline-info py-1 m-2 btn-lg px-1">Aggiungi ingredienti</button>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card mb-5 border">
                        <img class="card-img-top img-fluid" src="https://www.melarossa.it/wp-content/uploads/2020/10/pizza-con-peperoni-e-olive-300x300.jpg" alt="Pizza6">
                        <div class="card-body pb-0">
                            <h5 class="text-black text-center">Bufala Peperoni e olive</h5>
                        </div>
                        <div class="card-body pt-0 text-center">
                            <button type="button" class="btn btn-info py-1 m-2 btn-lg px-1">9,50 €</button>
                            <button type="button" class="btn btn-outline-info py-1 m-2 btn-lg px-1">Aggiungi ingredienti</button>
                        </div>
                    </div>
                </div>

    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</body>

</html>
